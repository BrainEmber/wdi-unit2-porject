<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%=user.name%>'s page</title>
    <link rel="stylesheet" href="/css/app.css">
  </head>
  <body>
    <header>
      <h1><%=user.name%></h1>
      <nav>
        <ul>
          <li>
            <a href="/">Home</a><br><br>
          </li>
          <li>
            <a href="/users">Users Index</a><br>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <section>
        <h2>User Atributes:</h2>
        <ul>
          <li class='name'>Name: <%=user.name%></li>
        </ul>
      </section>
      <section>
        <a href='/users/<%=user._id%>/edit'>Edit</a><br><br>
      </section>
      <section>
        <form action="/users/<%=user._id%>?_method=DELETE" method='POST'>
          <input type="submit" value="Delete User"/>
        </form>
      </section>
      <section>
        <h2>Builds by this user</h2>
        <ul class='buildsList'>
          <% for(let i=0; i < user.posts.length; i++){ %>
            <li>
              <a href='/posts/<%=user.posts[i].id%>'>
                <%=user.posts[i].title%>
              </a><br><br><br>
            </li>
        <%  } %>
        </ul>
      </section>
    </main>

  </body>
</html>
